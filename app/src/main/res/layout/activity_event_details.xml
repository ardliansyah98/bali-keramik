<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventDetailsActivity"
    android:orientation="vertical">

    <include
        android:id="@+id/event_details_toolbar"
        layout="@layout/layout_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/gbr_event"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                />

            <TextView
                android:id="@+id/judul_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:textSize="25sp"
                android:singleLine="false"
                android:text="Apa itu Balai Teknologi Industri Kreatif Keramik?"
                android:gravity="bottom"
                android:textColor="#363533"
                android:layout_below="@id/gbr_event"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/penulis_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oleh: Admin"
                android:layout_below="@id/judul_event"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/tgl_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diposting pada 20 April 2023"
                android:layout_below="@id/penulis_event"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/deskripsi_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:textSize="16sp"
                android:singleLine="false"
                android:text="Apa itu Balai Teknologi Industri Kreatif Keramik? Sebuah teks yang panjang. Sebuah teks yang panjang. Sebuah teks yang panjang. Sebuah teks yang panjang. Sebuah teks yang panjang. Sebuah teks yang panjang. Sebuah teks yang panjang. Sebuah teks yang panjang. Sebuah teks yang panjang. Sebuah teks yang panjang. Sebuah teks yang panjang. Sebuah teks yang panjang. Sebuah teks yang panjang. Sebuah teks yang panjang. Sebuah teks yang panjang. Sebuah teks yang panjang. Sebuah teks yang panjang. Sebuah teks yang panjang. Sebuah teks yang panjang. Sebuah teks yang panjang. Sebuah teks yang panjang. Sebuah teks yang panjang. Sebuah teks yang panjang. Sebuah teks yang panjang. Sebuah teks yang panjang. Sebuah teks yang panjang. Sebuah teks yang panjang. Sebuah teks yang panjang. Sebuah teks yang panjang. Sebuah teks yang panjang. Sebuah teks yang panjang. Sebuah teks yang panjang. Sebuah teks yang panjang. Sebuah teks yang panjang. Sebuah teks yang panjang. Sebuah teks yang panjang. Sebuah teks yang panjang. Sebuah teks yang panjang. Sebuah teks yang panjang. Sebuah teks yang panjang. "
                android:gravity="bottom"
                android:textColor="#363533"
                android:layout_below="@id/tgl_event"
                />

        </RelativeLayout>

    </ScrollView>

</LinearLayout>